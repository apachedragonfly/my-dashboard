---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';

interface Props {
  title?: string;
}

const { title = 'My Dashboard' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Personal dashboard tracking music ideas, reading progress, and learning stats" />
    <meta name="color-scheme" content="dark" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 text-white min-h-screen antialiased">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-emerald-500 focus:text-white focus:px-4 focus:py-2 focus:rounded">
      Skip to main content
    </a>
    <div class="app-layout">
      <Navigation />
      <div class="main-content">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  .app-layout {
    display: flex;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    margin-left: 240px;
    padding: 2rem;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .app-layout {
      flex-direction: column;
    }

    .main-content {
      margin-left: 0;
      padding: 1rem;
    }
  }
</style>

