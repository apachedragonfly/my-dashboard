---
import Layout from '../layouts/Layout.astro';
import AnkiStats from '../components/AnkiStats.astro';

export const prerender = true;
---

<Layout title="Anki - My Dashboard">
  <main id="main-content" class="max-w-4xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Anki</h1>
      <p class="text-gray-400">
        Track your learning and review stats
      </p>
    </header>

    <div class="space-y-6">
      <AnkiStats />
    </div>
  </main>
</Layout>

